<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include android:id="@+id/opening_hours_layout" layout="@layout/quest_opening_hours" />
    <Button
        android:id="@+id/filler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/BottomSheetButtonBarItem"
        android:text="FILLER" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/readOnlyOpeningHoursList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/initialButtons"
        >
    <Button
        android:id="@+id/noButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/BottomSheetButtonBarItem"
        android:text="@string/quest_generic_hasFeature_no" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/BottomSheetButtonBarItem"
        android:text="@string/quest_generic_hasFeature_yes"
        />
    </LinearLayout>
</LinearLayout>
